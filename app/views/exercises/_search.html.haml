= form_tag url_for(:controller => 'exercises', :action => 'search'), :method => 'get' , :enforce_utf8 =>false do 
  .row.search
    .input-group
      = text_field_tag :search, params[:search], id: "search_field",
          class: "input input-medium form-control search-query",
          placeholder: "Search exercises..."
      %span.input-group-btn
        = content_tag :button, type: :submit, class: "btn btn-default" do
          %i.fa.fa-search
          Search
